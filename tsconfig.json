{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": ".build",
      "rootDir": "./",
      "sourceMap": true,
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }